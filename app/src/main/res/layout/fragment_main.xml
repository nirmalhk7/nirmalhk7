<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".entrydisplay.MainFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_dimen"
            android:padding="@dimen/standard_dimen">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weather"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/standard_dimen">
                <ImageView
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:id="@+id/weatherIcon"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:id="@+id/weatherDesc"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dailySchedule"
            android:padding="@dimen/standard_dimen"
            android:layout_margin="@dimen/standard_dimen">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/standard_dimen">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:text="Current Class"
                    android:textColor="@color/colorFontLight"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:text="Class Name"
                    android:textColor="@color/colorFontLight"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="5px"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorFontLight"></LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:text="Next Class"
                    android:textColor="@color/colorFontLight"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:text="Class Name"
                    android:textColor="@color/colorFontLight"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/examHolidayNext"
            android:padding="@dimen/standard_dimen"
            android:layout_margin="@dimen/standard_dimen">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/standard_dimen">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:text="Next Holiday"
                    android:textColor="@color/colorFontLight"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:text="Makar Sankranti"
                    android:textColor="@color/colorFontLight"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:paddingTop="10dp"
                    android:text="Next Exam"
                    android:textColor="@color/colorFontLight"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:text="Physics Midsem"
                    android:textColor="@color/colorFontLight"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/veronica"
            android:padding="@dimen/standard_dimen"
            android:layout_margin="@dimen/standard_dimen">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/standard_dimen">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:id="@+id/iconVeronica"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:layout_height="match_parent"
                        android:id="@+id/veronicaDesc">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            android:fontFamily="@font/orbitron"
                            android:text="Veronica"

                            android:textSize="17sp"
                            android:textColor="@color/colorFontDark" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_dimen"
                    android:minHeight="30dp"
                    android:background="@color/cardview_light_background">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:text="Response from Nirmal."
                        android:textColor="@color/colorFontLight"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>