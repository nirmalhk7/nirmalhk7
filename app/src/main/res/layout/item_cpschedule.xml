<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_callmgr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/standard_dimen">

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_dimen"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/codesch_hostname"

            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textAlignment="viewEnd"
            android:textAllCaps="true"
            android:textSize="10sp"
            tools:text="Codeforces" />
        <TextView
            android:id="@+id/codesh_compname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="Competition Name is a very very bug name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/codesch_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="15sp"
                tools:text="14 days" />
            <TextView
                android:id="@+id/codesch_link"
                android:layout_width="0px"
                android:layout_height="0px"
                android:padding="2dp"
                android:textSize="15sp"
                tools:text="05:00" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>