<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:id="@+id/listSingleItem">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/text_container">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Task X djdcnjcndjkcdjnc"
            android:id="@+id/subjName"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Label X"
            android:id="@+id/subjDateTime"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@android:color/holo_green_dark"
        android:background="@color/colorDark"
        android:src="@drawable/ic_absent"
        android:id="@+id/item_absent"
        android:paddingLeft="10dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@android:color/holo_green_dark"
        android:background="@color/colorDark"
        android:src="@drawable/ic_cancelled"
        android:id="@+id/item_cancelled"
        android:paddingLeft="10dp" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@android:color/holo_green_dark"
        android:background="@color/colorDark"
        android:src="@drawable/ic_present"
        android:id="@+id/item_present"
        android:paddingLeft="10dp" />

</LinearLayout>