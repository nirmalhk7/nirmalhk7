<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:id="@+id/swipeswipe"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/subjName_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="Subject Name" />
        <TextView
            android:id="@+id/presentabsent_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5 Present 4 Absent" />
        <TextView
            android:layout_width="0px"
            android:layout_height="0px"
            android:id="@+id/attendance_id"/>
    </LinearLayout>
    <TextView
        android:id="@+id/percent_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="40%"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_gravity="center_vertical"
        android:textSize="15sp"/>
    <ImageButton
        android:id="@+id/present_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:src="@drawable/ic_present" />

    <ImageButton
        android:id="@+id/absent_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:src="@drawable/ic_absent" />
